import sys
for _ in range(int(input())):
    s=list(input().strip())
    if 'A' not in s or 'B' not in s:
        print(len(s)-1)
        continue
    i,c=0,0
    #print(s)
    while i!=len(s)-1:        
        if s[i]==s[i+1]:
            #print(s)
            i+=1
            #s.pop(i)
            c+=1
            #s=''.join(s)
        else:
            i+=1
    print(c)
        
        
